<table border="0">
	<tr>
		<td width="145"><label for="">Contract Name</label></td>
		<td><input type="text" name="contractName" value="{contractName}" /></td>
	</tr>

	<tr>
		<td><label for="">Contract Cost</label></td>
		<td><input type="text" name="contractCost" value="{contractCost}" /></td>
	</tr>

	<tr>
		<td valign="top"><label for="">Contract Terms</label></td>
		<td><textarea rows="8" cols="50" name="contractTerms">{contractTerms}</textarea></td>
	</tr>

	<tr>
		<td><label for="">Free Patches</label></td>
		<td>
			<input type="radio" name="freePatches" value="Yes" /> Yes
			<input type="radio" name="freePatches" value="No" /> No
		</td>
	</tr>

	<tr>
		<td><label for="">Free Upgrades</label></td>
		<td>
			<input type="radio" name="freeUpgrades" value="Yes" /> Yes
			<input type="radio" name="freeUpgrades" value="No" /> No
		</td>
	</tr>
</table>